<%- include("partials/header") -%>
<% if (isLogined === true) { %>
<% const loginMethod = user.loginMethod; %>
<section class="text-gray-700 body-font">
  <div class="container px-5 py-4 mx-auto flex flex-col">
    <div class="lg:w-4/6 mx-auto">
      <div class="flex flex-col sm:flex-row mt-10">
        <div class="sm:w-1/3 text-center sm:pr-8 sm:py-8">
          <div class="w-auto h-auto max-w-sm max-h-sm rounded-full inline-flex items-center justify-center bg-gray-200 text-gray-400">
            <div class="circular mx-auto ">
              <img src="<%=user[loginMethod].profilePicture%>" alt="Profile Picture">
            </div>
          </div>
          <div class="flex flex-col items-center text-center justify-center">
            <h2 class="font-medium title-font mt-4 text-gray-900 text-lg"><span class="font-weight-bold text-uppercase"><%=user[loginMethod].fullname%></span></h2>
            <div class="w-12 h-1 bg-blue-500 rounded mt-2 mb-4"></div>
            <p class="text-base text-gray-600"><%=user[loginMethod].email===undefined? "Email not provided" : user[loginMethod].email%></p>
          </div>
        </div>
        <div class="sm:w-2/3 sm:pl-8 sm:py-8 sm:border-l border-gray-300 sm:border-t-0 border-t mt-4 pt-4 sm:mt-0 text-center sm:text-left push-left">
          <p class="leading-relaxed text-lg mb-4"><%=user.bio===undefined? "Bio not updated" : user.bio%></p>
          <% if (user.githubURL) { %>
          <a href="https://github.com/<%=user.githubURL%>" class="btn btn-dark text-white leading-relaxed text-lg mb-4 fa fa-github" target="_blank"> <%=user.githubURL%></a>
          <% } %>
          <% if (user.linkedinURL) { %>
          <a href="https://linkedin.com/in/<%=user.linkedinURL%>"+ class="btn btn-primary text-white leading-relaxed text-lg mb-4 fa fa-linkedin" target="_blank"> <%=user.linkedinURL%></a>
          <% } %>
          <br>
          <a href="/profile" class="inline-flex items-center btn btn-warning">Edit Profile
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
<div>
  <hr class="pacman">
</div>
<section class="text-gray-700 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-wrap w-full mb-20">
      <div class="lg:w-1/2 w-full mb-6 lg:mb-0">
        <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-gray-900">Practice Labs</h1>
        <div class="h-1 w-20 bg-blue-500 rounded"></div>
      </div>
      <p class="lg:w-1/2 w-full leading-relaxed text-base">Practice labs powered by <a href="https://katacoda.com" target="
        ">Katacoda</a>.</p>
    </div>
    <div class="flex flex-wrap -m-4">
      <%- include("partials/practiceCard") -%>
    </div>
  </div>
</section>
<div>
  <hr class="pacman">
</div>
<section class="text-gray-700 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-wrap w-full mb-20">
      <div class="lg:w-1/2 w-full mb-6 lg:mb-0">
        <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-gray-900">Exam Corner</h1>
        <div class="h-1 w-20 bg-blue-500 rounded"></div>
      </div>
      <p class="lg:w-1/2 w-full leading-relaxed text-base">Performance based exam labs.</p>
    </div>
    <div class="flex flex-wrap -m-4">
      <%- include("partials/examCard") -%>
    </div>
  </div>
</section>

<div class="modal fade" id="startExamModel" tabindex="-1" role="dialog" aria-labelledby="startExamModel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="startExamModel">General Rules for the Exam</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ul>
          <li class="list-unstyled">You should follow all the rules described below. Not following the rule may result in you getting banned from the portal.</li>
          <li><ul class="rules-model">
            <li>It is best to perform the exam on a desktop. Issues might occur if using a mobile device.</li>
            <li>Your login username and password will be provided by your instructor.</li>
            <li>Please close the website once you are finished, so resources could be made availabe to other students.</li>
            <li>If you have any problem during the exam, please inform the instructor.</li>
          </ul></li>
          <li>All the best</li>
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <a id="startButton" href="/questions" class="btn btn-primary">Start</a>
      </div>
    </div>
  </div>
</div>
<% } %>
<style media="screen and (min-width: 640px) and (max-width: 1024px)">
.push-left {
  margin-left: 75px;
}
</style>

